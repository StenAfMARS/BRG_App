<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/progressBackground">
        <shape >
            <padding android:bottom="1dp" android:top="1dp" android:left="1dp" android:right="1dp" />
            <corners android:radius="30dp"/>
            <stroke android:width="1dp" android:color="@color/colorPrimary" />
        </shape>
    </item>

    <item android:id="@+id/progressProgress">
        <clip>
            <shape>
                <padding android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp" />
                <corners android:radius="30dp" />
                <solid android:color="@color/colorPrimaryLight"/>
            </shape>
        </clip>
    </item>
</layer-list>